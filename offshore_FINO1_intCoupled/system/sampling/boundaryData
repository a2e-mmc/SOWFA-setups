boundaryData
{
    type            surfaces;
    functionObjectLibs ( "libsampling.so" "libSOWFAfileFormats.so" );
    enabled         true;
    interpolationScheme isThisNeeded;
    writeControl    timeStep;
    writeInterval   1;
    surfaceFormat   boundaryData;
    fields          ( U T k );
    surfaces        ( north { type patch ; patches ( north ) ; triangulate false ; } west { type patch ; patches ( west ) ; triangulate false ; } );
}


